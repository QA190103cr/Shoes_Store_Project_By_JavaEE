<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-4.0.xsd
           http://www.springframework.org/schema/mvc
           http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd">
    
    <!-- Auto scan @Controller's classes in package -->
    <context:component-scan base-package="controllers"/>

    <!-- Allow to use annotation like @RequestMapping -->
    <mvc:annotation-driven/>

    <!-- Cấu hình nơi chứa các file JSP (view) -->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/views/"/> <!-- view folder -->
        <property name="suffix" value=".jsp"/> <!-- Phần mở rộng -->
    </bean>

    <!--Mapping /images/(real name) to /imgs/(fake name)-->
    <mvc:resources mapping="/imgs/**" location="/images/" />
    <mvc:resources mapping="/css/**" location="/assets/css/" />
    <mvc:resources mapping="/js/**" location="/assets/js/" />
</beans>